# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           				controllers.Application.index

#Login page     
GET     /login                      				controllers.Login.login

POST    /login										controllers.Login.signin

POST   /logout                                     controllers.Login.logout

#Clients URLs
GET     /clients                    				controllers.Clients.list

GET     /clients/new                				controllers.Clients.newClient

POST    /clients                    				controllers.Clients.create

GET     /clients/:id          				controllers.Clients.details(id: Int)

POST    /clients/:id							controllers.Clients.update(id: Int)

GET     /clients/:id/edit     				controllers.Clients.edit(id: Int)

POST    /clients/:id/delete					controllers.Clients.delete(id: Int)

#Accounts URLs
GET     /clients/:id/accounts     			controllers.Accounts.list(id: Int)

GET     /clients/:id/accounts/new           controllers.Accounts.newAccount(id: Int)

POST    /clients/:id/accounts     			controllers.Accounts.create(id: Int)

GET     /clients/:id/accounts/:acc			controllers.Accounts.details(id: Int, acc: Int)

POST    /clients/:id/accounts/:acc/delete 	controllers.Accounts.delete(id: Int, acc: Int)

#Movements URLs
GET     /clients/:id/accounts/:acc/movements	controllers.Movements.list(id: Int, acc: Int)

POST    /clients/:id/accounts/:acc/movements 	controllers.Movements.create(id: Int, acc: Int)

#Reports URLs
GET    /reports/new                              controllers.Reports.newReport(clientId: Int)

POST   /reports                                  controllers.Reports.reportData

GET    /monthlyBalance                           controllers.Reports.monthlyBalanceData(client: Int, account: Int)


   
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
